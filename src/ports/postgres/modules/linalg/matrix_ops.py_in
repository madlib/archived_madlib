def _matrix_collapse_op_sparse(schema_madlib, matrix_in, in_args, dim, in_dims, expr):
    group_col = "{in_args[row]}".format(**locals())
    number = in_dims[0]
    div = in_dims[1]
    if dim == 1:
        group_col = "{in_args[col]}".format(**locals())
        number = in_dims[1]
        div = in_dims[0]

    expr = expr.format(**locals())
    r = plpy.execute("""
        SELECT
            array_agg(op_val order by {group_col}) as res
        FROM
            (SELECT
                {group_col},
                {expr} as op_val
            FROM
                (SELECT
                    b as {group_col},
                    coalesce(m.{in_args[val]}, 0) as value
                FROM
                    {matrix_in} m RIGHT OUTER JOIN
                            generate_series(0, {number} - 1) b
                    ON m.{group_col} = b) t
            GROUP BY {group_col}) op_t
        """.format(**locals()))
    _assert(len(r) == 1,
            "Matrix error: Bad matrix dimension, row:{row}, column:{col}".format(row = in_dims[0], col = in_dims[1]))
    return r[0]['res']
# ------------------------------------------------------------------------------


def _matrix_row_collapse_op_dense(schema_madlib, matrix_in, in_args, vector_op):
    r = plpy.execute("""
        SELECT
            array_agg({schema_madlib}.{vector_op}({in_args[val]}) order by {in_args[row]}) as res
        FROM
            {matrix_in} m
        """.format(**locals()))

    _assert(len(r) == 1,
            "Matrix error: There is no value for dense matrix, value column: {in_args[val]}".format(**locals()))
    return r[0]['res']
# ------------------------------------------------------------------------------


def _matrix_col_collapse_op_dense(schema_madlib, matrix_in, in_args, col_count, vector_op):
    r = plpy.execute("""
        SELECT
            array_agg(val order by col) as res
        FROM
            (SELECT
                col,
                {vector_op}(val) as val
            FROM
                (SELECT
                    unnest({in_args[val]}) as val,
                    {in_args[row]} as row,
                    generate_series(0, {col_count} - 1) as col
                FROM
                    {matrix_in}) m
            GROUP BY
                col) t
        """.format(**locals()))
    _assert(len(r) == 1,
            "Matrix error: There is no value for dense matrix, value column: {in_args[val]}".format(**locals()))
    return r[0]['res']
