def matrix_collapse_op(schema_madlib, matrix_in, in_args, dim, vector_ops):
    _validate_input_table(matrix_in)

    in_args = parse_matrix_args(in_args)

    in_dim = get_dims(matrix_in, in_args)
    _assert(min(in_dim) > 0,
            "Matrix error: Invalid dimensions for input matrix")
    _assert(dim == 1 or dim == 2,
            "Matrix error: The dimension should 1 for column and 2 for row, but %d" % (dim))

    if _is_sparse(matrix_in, in_args['val']):
        # matrix_in is sparse
        _validate_sparse(matrix_in, in_args)
        return _matrix_collapse_op_sparse(schema_madlib, matrix_in, in_args, dim, in_dim, vector_ops['sparse_agg_expr'])

    _validate_dense(matrix_in, in_args, in_dim[0])

    if dim == 1:
        return _matrix_col_collapse_op_dense(schema_madlib, matrix_in, in_args, in_dim[1], vector_ops['dense_agg_op'])
    return _matrix_row_collapse_op_dense(schema_madlib, matrix_in, in_args, vector_ops['dense_array_op'])
