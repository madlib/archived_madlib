 *
 * @usage
 * -# Create Naive Bayes probabilities view:
 *  <pre>SELECT \ref create_nb_probs_view(
 *    '<em>featureProbsName</em>', '<em>classPriorsName</em>',
 *    '<em>classifySource</em>', '<em>classifyKeyColumn</em>', '<em>classifyAttrColumn</em>',
