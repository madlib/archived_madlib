-- Create vertex and "EDGE" tables to represent the graph:
DROP TABLE IF EXISTS vertex, "EDGE";
CREATE TABLE vertex(
        id INTEGER,
        name TEXT
        );
CREATE TABLE "EDGE"(
        src_id INTEGER,
        "DEST_ID" INTEGER,
        edge_weight FLOAT8
        );
