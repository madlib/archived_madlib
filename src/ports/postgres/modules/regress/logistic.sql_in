    SFUNC=MADLIB_SCHEMA.logregr_irls_step_transition,
    m4_ifdef(`__GREENPLUM__',`prefunc=MADLIB_SCHEMA.logregr_irls_step_merge_states,')
    FINALFUNC=MADLIB_SCHEMA.logregr_irls_step_final,
    INITCOND='{0,0,0}'
);

