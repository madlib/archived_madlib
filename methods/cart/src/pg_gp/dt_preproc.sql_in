    (
    feature_name    TEXT,
    metatable_name  TEXT
    )
RETURNS INT AS $$
DECLARE
    curstmt TEXT;
    result  INT := 0;
BEGIN
    curstmt = MADLIB_SCHEMA.__format
                (
                    'SELECT id 
                     FROM  % 
                     WHERE column_name=''%'' AND 
                           column_type = ''f'' 
                     LIMIT 1;',
                    ARRAY[
                        metatable_name,
                        feature_name
                    ]
                );
        
    EXECUTE curstmt INTO result;
    
    RETURN result;
END
$$ LANGUAGE PLPGSQL;


