    /*+ feature ids */ DOUBLE PRECISION[],
    /*+ feature types */ DOUBLE PRECISION[],
    /*+ previous labels */ DOUBLE PRECISION[],
    /*+ current labels */ DOUBLE PRECISION[]) (
    
